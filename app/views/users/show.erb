<% provide(:title, @user.name) %>

<div class="row">
  <aside class="span4">
    <section>
    <h1>
      <%= gravatar_for @user %>
      <%= @user.name %>
    </h1>
    </section>
  </aside>
</div>
<!-- ОФОРМИТЬ -->
<b>Загруженные рисунки:</b>
<%= will_paginate (@picture) %>
<div>
  <% @picture.each do |l| %>

      <%= link_to image_tag(l.link.url), controller: "pictures",
                  action: "show", user_id: params[:id], id: l.id  %>

  <% end %>
</div>
<%= will_paginate (@picture) %>
