<li>
 <span class="author"> <%= link_to User.find_by(id: comment.user_id).name , controller: "users", action: 'show', id: current_user.id %>
  </span>
  <span class="content"><b><%= comment.content %></b></span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(comment.created_at) %> ago.
  </span>

  <% if current_user.id.equal?(comment.user_id) %>

    <%= link_to "delete", comment_path(:pic_id => comment.picture_id, :id => comment.id), remote: true, method: :delete, data: { confirm: "Вы уверены?" }, title: comment.content %>
  <% end %>
</li>

