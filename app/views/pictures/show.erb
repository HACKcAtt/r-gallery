<%= provide(:title, 'Просмотр изображения') %>
<h1>Просмотр изображения</h1>

<div class="row">
  <!-- ======== ОФОРМИТЬ КАРТИНКУ ==========-->
  <div class="span10 offset1">
    <div class="well">
    <%= image_tag(@pic.link.url)%>
    </div>
  </div>

  <!-- ======== ОФОРМИТЬ ОПИСАНИЕ ==========-->
  <div class="span3 description">
    <b>Описание: </b><%= @pic.description %>
  </div>

  <% if current_user?(User.find_by(id: params[:user_id])) %>
  <div class="span 3 actions">
    <b>Действия:</b>
    <span class="btn btn-danger"><%= link_to "Удалить", @pic, method: :delete, data: { confirm: "Вы уверены?",
                                                   id: @pic.id }, title: @pic.description %></span>

      <% end %>
  </div>
</div>

<br><br>
  <!-- ======== ОФОРМИТЬ КОММЕНТАРИИ ==========-->
<div class="row">

        <% if @pic.comments.any? %>
        <h3>Комментарии: <%= @pic.comments.count %></h3>
          <ol class="comments">
            <%= render @pic.comments %>
          </ol>
      <% end %>


  <!-- ======== ОФОРМИТЬ ФОРМА ДЛЯ КОММЕНТАРИЕВ ==========-->
  <div>
    <%= render 'shared/comment_form' %>
  </div>
</div>