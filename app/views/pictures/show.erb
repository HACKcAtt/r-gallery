<%= provide(:title, 'Show Picture') %>
<h1>Show Picture</h1>

<div class="row">
  <!-- ======== ОФОРМИТЬ КАРТИНКУ ==========-->
  <div class="span6 offset3">
    <%= image_tag(@pic.link.url)
    %>
  </div>

  <!-- ======== ОФОРМИТЬ ОПИСАНИЕ ==========-->
  <div class="span4 description">
    <b>Описание: </b><%= @pic.description %>
  </div>

  <% if current_user?(User.find_by(id: params[:id])) %>
  <div class="span 4 actions">
    <b>Действия:</b> <%= link_to "delete", @pic, method: :delete, data: { confirm: "Are You Sure?",
                                                   id: @pic.id }, title: @pic.description %>
  </div>
      <% end %>

  <div class="span 4 actions">
    <%= #link_to "edit", @pic, method: :post, data: { prompt: "Are You Sure?",
                                #                                          id: @pic.id }, title: @pic.description
    %>
  </div>

  <!-- ======== ОФОРМИТЬ КОММЕНТАРИИ ==========-->
    <div class="span8">
      <% if @pic.comments.any? %>
        <h3>Commentaries: <%= @pic.comments.count %></h3>
          <ol class="comments">
            <%= render @pic.comments %>
          </ol>


      <% end %>

    </div>

  <!-- ======== ОФОРМИТЬ ФОРМА ДЛЯ КОММЕНТАРИЕВ ==========-->
  <div>
    <%= render 'shared/comment_form' %>
  </div>
</div>