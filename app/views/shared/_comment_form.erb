<%= form_for(@comment) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <div class="field">
      <%= f.text_area :content, placeholder: "Compose new commentary..." %>
      <%= f.hidden_field :pic_id, :value => @pic.id %>
    </div>
    <%= f.submit "Post", class: "btn btn-large btn-primary" %>
<% end %>